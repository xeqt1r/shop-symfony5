{% extends 'base.html.twig' %}

{% block body %}
    <h2>Edit Product</h2>
    <form method="post" action="{{ path('edit_product',{'id': product.id}) }}">
        <label>
            <input type="text" name="product[title]" value="{{ product.title }}">
        </label>
        <label>
            <input type="text" name="product[summary]" value="{{ product.summary }}">
        </label>
        <input type="submit" value="Edit">
    </form>

{% endblock %}